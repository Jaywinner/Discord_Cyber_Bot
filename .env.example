# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Discord Bot Token (Get from https://discord.com/developers/applications)
DISCORD_BOT_TOKEN=your_bot_token_here

# Optional: Guild ID for faster command syncing (Your Discord server ID)
# Leave commented or empty if you want to sync commands globally
GUILD_ID=

# Database Configuration (Optional - defaults to academy.db)
DATABASE_PATH=academy.db

# Bot Configuration
BOT_PREFIX=!

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO